{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "@lib/*": ["/lib/*"],
      "@modules/*": ["/modules/*"],
      "@pages/*": ["/pages/*"],
      "@medusa/*":["/medusa/*"],
    },
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src",
    "**/*.ts",
    "**/*.js",  
    "**/*.mjs",
    "**/*.tsx",
    "**/*.jsx"
, "next.config.mjs"  ],
  "exclude": [
    "node_modules"
  ]
}
